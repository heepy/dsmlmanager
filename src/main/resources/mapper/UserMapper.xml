<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.horan.dsmlmanager.dao.UserMapper">
    <resultMap id="userResultMap" type="com.horan.dsmlmanager.entity.User">
        <id property="id" column="id"></id>
        <result property="userName" column="username"></result>
        <result property="email" column="email"></result>
        <result property="address" column="address"></result>
        <result property="password" column="password"></result>
        <result property="phone" column="phone"></result>
    </resultMap>
    <select id="selectAllUser" resultMap="userResultMap">
        select * from users
    </select>
    <insert id="addUser"  parameterType="com.horan.dsmlmanager.entity.User">
        <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID()
        </selectKey>
      insert into users(id,username,email,phone,password,address)
      values
       (#{id},#{userName},#{email},#{phone},#{password},#{address})
    </insert>
    <select id="selectUserById" resultMap="userResultMap" parameterType="int">
        select * from users where id=#{id}
    </select>
    <update id="updateUserById" parameterType="com.horan.dsmlmanager.entity.User">
        update users
        <set>
            <if test="userName != null">username=#{userName},</if>
            <if test=" password!= null">password=#{password},</if>
            <if test="email != null">email=#{email},</if>
            <if test="phone != null">phone=#{phone},</if>
            <if test="address != null">address=#{address},</if>
        </set>
        where id=#{id}
    </update>

</mapper>